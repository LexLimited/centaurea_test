{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true,
    "noEmit": true,
    "paths": {
      "@/*": [ "./src/*" ]
    },
  },
  "exclude": ["dist", "inlang.config.js"]
}